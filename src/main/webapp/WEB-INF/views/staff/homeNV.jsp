    <script src="<c:url value='/resource/assets/js/bootstrap.bundle.min.js'/>"></script>
    <script src="<c:url value='/resource/assets/js/templatemo.js'/>"></script>
    <script src="<c:url value='/resource/assets/js/custom.js'/>"></script>
    <!-- End Script -->
</body>

</html>